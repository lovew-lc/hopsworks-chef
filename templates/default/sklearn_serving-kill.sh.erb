#!/usr/bin/env bash

help() {
    echo ""
    echo "usage: CID MODEL_NAME PROJECT_NAME SECRET_DIR"
    echo ""
    exit 1
}


if [ $# -ne 4 ]; then
  help
fi

CID=$1
MODEL_NAME=$2
PROJECT_NAME=$3
SECRET_DIR=$4
CID_FILE=${SECRET_DIR}/sklearn_flask_server.pid
$CONTAINER_NAME=sk_model_server_${MODEL_NAME}_${PROJECT_NAME}

NOT_FOUND=127

function kill_named {
    CID=$(docker container list -a | grep -i "$CONTAINER_NAME" | grep -v grep | awk '{print $1}')
    if [ "$CID" != "" ] ; then
      docker rm -f "$CID" > /dev/null 2>&1
      res=$?
    else
      res=$NOT_FOUND
    fi
    return "$res"
}

echo "Killing input cid: $CID"
docker rm -f "$CID" > /dev/null 2>&1
if [ $? -ne 0 ] ; then
    if [ -f "$CID_FILE" ] ; then
      CID=$(cat "$PID_FILE")
      echo "Killing cid: $CID"
      docker rm -f "$CID" > /dev/null 2>&1
      if [ $? -ne 0 ] ; then
          kill_named
      fi
    fi
fi
exit $?